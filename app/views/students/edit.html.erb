<% if @student.errors.any? %>
  <div class="container row col s12 m12 l12">
    <div class="card-panel red lighten-2">
      <span class="white-text">
        <strong>
          <%= pluralize(@student.errors.count, "Error") %>
          prohibited your profile from being created.
        </strong>

        <ul>
          <% @student.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </span>
    </div>
  </div>
<% end %>

<div class="container row center col s12 m12 l12">
  <div class="row card-panel">
    <h3 class="header">Edit Profile</h3>
    <%= form_for(@student, html: {class: "col s12"}) do |f| %>
      <div class="row input-field col s12">
        <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
        <%= f.label :name %>
      </div>

      <div class="row input-field col s12">
        <%= f.email_field :email, placeholder: "Enter your email" %>
        <%= f.label :email %>
      </div>
      
      <div class="row input-field col s12">
        <%= f.submit "Save Changes", class: "btn orange waves-effect waves-light right" %>
      </div>
      
    <% end %>
  </div>
</div>
