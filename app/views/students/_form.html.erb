<%= render 'shared/errors', obj: @student %>

<div class="container row center col s12 m12 l12">
  <div class="row card-panel">
    <h3 class="header"><%= @student.new_record? ? "Sign Up" : "Edit Profile" %></h3>
    <%= form_for(@student, html: {class: "col s12"}) do |f| %>
      <div class="row input-field col s12">
        <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
        <%= f.label :name %>
      </div>

      <div class="row input-field col s12">
        <%= f.email_field :email, placeholder: "Enter your email" %>
        <%= f.label :email %>
      </div>
      
      <div class="row input-field col s12">
        <%= f.submit(@student.new_record? ? "Sign Up" : "Save Profile", class: "btn orange waves-effect waves-light right") %>
      </div>
      
    <% end %>
  </div>
</div>
